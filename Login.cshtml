@model PROGPART1.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    .login-container h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 20px;
    }

    .login-container .form-control {
        border-radius: 5px;
    }

    .login-container .btn-primary {
        width: 100%;
        background-color: #3498db;
        border: none;
        margin-top: 20px;
    }

    .login-container p {
        text-align: center;
        margin-top: 15px;
    }

    .login-container a {
        color: #3498db;
        text-decoration: none;
    }

    .login-container a:hover {
        text-decoration: underline;
    }
</style>

<div class="login-container">
    <h2>Login</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordHash">Password:</label>
            <input type="password" asp-for="PasswordHash" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <p>Don't have an account? <a href="/Account/Register">Register here</a></p>
</div>
