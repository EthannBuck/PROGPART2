<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Claim System</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #d4ebf2; 
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #72bcd4; 
        }

        .navbar-brand, .nav-link {
            color: #fff !important; 
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #f4f7fa !important;
            }

        .container {
            background-color: #ffffff; 
            border-radius: 8px; 
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
        }

        footer {
            background-color: #72bcd4;
            color: #fff;
            padding: 15px 0;
            position: relative;
            width: 100%;
        }

            footer p {
                margin: 0;
            }

        html, body {
            height: 100%;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/">Claim System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Claim/SubmitClaim">Submit Claim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Claim/ViewClaims">View Claims</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Claim/VerifyClaims">Verify Claims</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container mt-4 content">
            @RenderBody()
        </div>

        <footer class="text-center footer mt-4">
            <p>&copy; 2024 - Contract Claim System</p>
        </footer>
    </div>
</body>
</html>
