@model PROGPART1.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .register-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

        .register-container h2 {
            text-align: center;
            color: #8e44ad;
            margin-bottom: 20px;
        }

        .register-container .form-control {
            border-radius: 5px;
        }

        .register-container .btn-primary {
            width: 100%;
            background-color: #8e44ad;
            border: none;
            margin-top: 20px;
        }

        .register-container p {
            text-align: center;
            margin-top: 15px;
        }

        .register-container a {
            color: #8e44ad;
            text-decoration: none;
        }

            .register-container a:hover {
                text-decoration: underline;
            }
</style>

<div class="register-container">
    <h2>Register</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Name">Full Name:</label>
            <input type="text" asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input type="email" asp-for="Email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordHash">Password:</label>
            <input type="password" asp-for="PasswordHash" class="form-control" required />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>

    <p>Already have an account? <a href="/Account/Login">Login here</a></p>
</div>
